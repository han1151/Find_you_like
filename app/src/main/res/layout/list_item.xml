<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="6dp"
    android:layout_marginTop="5dp"
    android:elevation="10dp"
    android:translationZ="4dp"
    card_view:cardCornerRadius="6dp"
    card_view:cardBackgroundColor="@color/cardbackground"
    >

    <ImageView
        android:id="@+id/imageView_list"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:src="@android:drawable/ic_menu_call"
        android:contentDescription="@string/image" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/detail_name_list"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="start"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#000000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/detail_distance_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/detail_comment_list"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp" />


        <RatingBar
            android:id="@+id/ratingBar_list"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/detail_name_list"
            android:layout_below="@+id/detail_name_list"
            android:numStars="5"
            android:stepSize="0.5" />

        <TextView
            android:id="@+id/detail_comment_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ratingBar_list"
            android:layout_toEndOf="@+id/ratingBar_list"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/detail_description_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/detail_name_list"
            android:layout_below="@+id/ratingBar_list" />

    </RelativeLayout>

</android.support.v7.widget.CardView>